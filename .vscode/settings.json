{
  // Java build and analysis
  "java.compile.nullAnalysis.mode": "automatic",
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.format.enabled": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.settings.profile": "GoogleStyle",

  // Code completion and imports
  "java.completion.importOrder": ["java", "javax", "org", "com"],
  "java.completion.guessMethodArguments": true,
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.import.gradle.wrapper.enabled": true,
  "java.import.gradle.offline.enabled": false,

  // Debugging
  "java.debug.settings.hotCodeReplace": "auto",
  "java.debug.settings.exceptionBreakpoint.skipClasses": [
    "java.*",
    "javax.*",
    "sun.*"
  ],

  // Spring Boot specific
  "spring-boot.ls.enabled": true,
  "spring-boot.ls.java.debug.enabled": true,
  "spring-boot.run.jvmArguments": "-Dspring.profiles.active=dev",

  // Code quality
  "java.checkstyle.configuration": "${workspaceFolder}/checkstyle.xml",
  "java.checkstyle.version": "10.18.1",

  // Testing
  "java.test.config": {
    "workingDirectory": "${workspaceFolder}",
    "vmArgs": ["-Dspring.profiles.active=test"]
  }
}
